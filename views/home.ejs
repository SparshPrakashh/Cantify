
<%- include('partials/header') %>


  

<div class="intro-container" >
       <div class="introText" ><p>Just Order and <span style="color: white">RELAX!</span></p></div>
       <div class="tdspl" >
           <img src="/images/dosa.jpg" alt="" class="tdsplimg">
           <div class="tdspldesc">
               <h2>Today's Special:</h2>
               <% dishes.forEach(function(element){%>
                  <% if(element.category=="special"){ %>
                    <h1><%=element.dishName%></h1>
                    <p><%= element.description%></p>
                  

                  <% if(element.status=="added"){ %>
                    <div class="quantity-box">
                      <form action="/edit-quantity/tdspl" method="post">
                        <button type="submit" name="delete" value=<%=element.name%>>-</button>
                      </form>
          
                      <p><%=element.quantity %></p>
                      <form action="/edit-quantity/tdspl" method="post">
                        <button type="submit" name="add" value=<%=element.name%>>+</button>
                      </form>
          
                    </div>
                  <%}else{%>
                    
                  <form action="/addToCart/tdspl" method="post">
                   <button type="submit" class="addToCart" name="dishName" value="<%=element.name %>"><%= element.status%></button>
                  </form>
    
                  <%}%>
                  <%}%>
               <%});%>
               
               
               <!-- <form action="/addToCart" method="post">
                  <button type="submit" class="addToCart" name="dishName" value="dosa">+ Add</button>
               </form> -->

           </div>
       </div>
   </div>

