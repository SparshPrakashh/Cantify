   <div class="heading" id="comboSection">
       <h3 style="margin-bottom: 5vh;">Cool Combos</h3>
   </div>
   <div class="combo-category">
           <% dishes.forEach(function(element){ %>
            <% if(element.category == "combo"){ %>
            <div class="combo-card ">
              <img src="images/<%= element.name %>.jpg" alt="" class="cmbimg">
              <div class="combodesc">
                  <h2 ><%= element.dishName %></h2>
                  <p><%= element.description %></p>
                  <div class="rateAdd">
                      <h3>â‚¹<%= element.price %></h3>

                      <% if(element.status=="added"){ %>
                        <div class="quantity-box">
                          <form action="/edit-quantity/home" method="post">
                            <button submit" name="delete" value=<%=element.name%>>-</button>
                          </form>
              
                          <p><%=element.quantity %></p>
                          <form action="/edit-quantity/home" method="post">
                            <button type="submit" name="add" value=<%=element.name%>>+</button>
                          </form>
              
                        </div>
                      <%}else{%>
                        
                      <form action="/addToCart/combo" method="post">
                       <button type="submit" class="addToCart" name="dishName" value="<%=element.name %>"><%= element.status%></button>
                      </form>

                      <%}%>
                  </div>
              </div>
          </div>
          <% } %>
           <% }); %>
           
   </div>
   <div class="endmsg">
         <h1>DITCH THE LONG QUEUES, ORDER FROM YOUR COMFORT.
         </h1>
     </div>




